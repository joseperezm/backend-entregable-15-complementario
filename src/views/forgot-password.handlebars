<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mt-5">Restablecer Contrase√±a</h2>
      {{#if messages.success}}
        <div
          class="alert alert-success mt-2 text-center"
          role="alert"
          id="success-message"
        >
          {{messages.success}}
        </div>
      {{/if}}
      {{#if messages.error}}
        <div
          class="alert alert-danger mt-2 text-center"
          role="alert"
          id="error-message"
        >
          {{messages.error}}
        </div>
      {{/if}}
      <form
        action="/api/sessions/request-reset-password"
        method="post"
        class="card bg-secondary mt-4"
      >
        <input class="form-control" type="email" name="email" placeholder="E-mail" required />
        <button type="submit" class="btn btn-primary">Enviar</button>
      </form>
      <div class="text-center mt-3">
        <a href="/login" class="text-light">Volver</a>
      </div>
    </div>
  </div>
</div>
<script src="/js/hideError.js"></script>